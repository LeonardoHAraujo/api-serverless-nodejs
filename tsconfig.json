{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["ES6"],
    "rootDir": "./src",
    "moduleResolution": "node",
    "outDir": "./build",
    "allowJs": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@infra/*": ["./src/infra/*"],
      "@main/*": ["./src/main/*"],
      "@tests/*": ["./tests/*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
